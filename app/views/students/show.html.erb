<div class="row-fluid">
    <div class="col-sm-3">
        <div style="text-align: center">
        <h1>
        <%= @student.name %>
        </h1>

        <%= image_tag @student.image, :class => 'student-img-lg' %>

        <h2><%= status_icon @student.status %> - <%= @student.nice_status %></h2>
        <h3><%= @student.destination %></h3>

        <%= link_to 'Edit', edit_student_path(@student), class: 'btn btn-block btn-warning' %>
        <%= link_to 'Back', students_path, class: 'btn btn-block btn-primary' %>
        </div>
    </div>

    <div class="col-sm-9">
        <div style="text-align: center; font-size: 18px;">
        <h1>Go To:</h1>
        <%= form_tag travel_student_path(@student) do %>
            <%= render partial: 'goto', locals: {student: @student} %>
        <% end %>
    </div>
</div>
